<Page xmlns:ui="@triniwiz/nativescript-image-zoom" xmlns="http://schemas.nativescript.org/tns.xsd"
      navigatingTo="navigatingTo" class="page">
  <Page.actionBar>
    <ActionBar title="nativescript-image-zoom" icon="" class="action-bar">
    </ActionBar>
  </Page.actionBar>
  <GridLayout rows="auto,*,auto,auto,auto" class="p-20">
    <Label text="Zoom" class="t-20 text-center c-black" textWrap="true"/>
    <GridLayout row="1">
      <ui:ImageZoom borderRadius="20" stretch="fill" height="100%" width="100%" id="image" src="~/nativescript-image-zoom/assets/image_302063.jpg"/>
    </GridLayout>
    <Button row="2" text="Remote Source" tap="{{loadRemoteSrc}}"/>
    <Button row="3" text="Local Resource" tap="{{loadResource}}"/>
    <Button row="4" text="Load ImageSource" tap="{{loadImgSrc}}"/>
  </GridLayout>
</Page>
