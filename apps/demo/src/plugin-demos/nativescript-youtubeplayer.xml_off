<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page" xmlns:ui="@triniwiz/nativescript-youtubeplayer">
    <Page.actionBar>
        <ActionBar title="nativescript-youtubeplayer" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
     <GridLayout rows="*,auto,auto,auto,auto,auto,auto" height="100%" class="p-20" id="container">
      <ui:YoutubePlayer controls="true" autoPlay="true" width="100%" loaded="loaded" id="player" videoId="{{videoId}}" backgroundColor="gray" />
      <Button row="1" text="Toggle FullScreen" tap="toggleFullScreen"/>
      <Button row="2" text="Change Source" tap="{{changeSource}}"/>
      <Button row="3" text="Load Dancehall" tap="{{getDanceHall}}"/>
      <Button row="4" text="Load HipHop" tap="{{getHipHop}}"/>
      <Button row="5" text="Load Soca" tap="{{getSoca}}"/>
    </GridLayout>
</Page>
